<%= render 'layouts/form_messages', object: @company %>
<b>Please fill out all fields for company and lead</b>

<%= form_for @company do |f| %>
 <%= f.hidden_field :user_id %>

  <%= f.label :name %>:
  <%= f.text_field :name %><br />

  <%= f.label :revenue, "Revenue(in thousands):" %>
  <%= f.number_field :revenue %><br />

  Check this box for customer:<%= f.check_box :customer %><br><br />
  <% if params[:action] =="new" || params[:action] == "create" %>
  <b>Create lead for Company</b> <br />

  <%= f.fields_for :leads, @company.leads.build do |i| %>

    <%= i.label :name %>:
    <%= i.text_field :name %> <br />

    <%= i.label :email %>:
    <%= i.text_field :email %> <br />

    <%= i.label :phone_number %> (please enter a 9 digit number):
    <%= i.text_field :phone_number %> <br />

      Check this box for contact:<%= i.check_box :contact %><br />

      <% end %>
    <%end%>
  <%= f.submit %>
<% end %>
